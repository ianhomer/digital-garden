{
  "name": "digital-garden",
  "version": "1.0.0",
  "description": "Digital Garden template",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianhomer/digital-garden.git"
  },
  "bugs": {
    "url": "https://github.com/ianhomer/digital-garden/issues"
  },
  "homepage": "https://github.com/ianhomer/digital-garden#readme",
  "author": "",
  "main": ".eslintrc.js",
  "scripts": {
    "prebuild": "node src/scripts/pre-build.js",
    "build": "next build",
    "dev": "next dev",
    "dev:test": "GARDENS_DIRECTORY=src/test/content next dev",
    "eslint": "eslint src --ext .js --ext .tsx --ext .ts",
    "eslint:fix": "eslint src --ext .js --ext .tsx --ext .ts --fix",
    "lint": "yarn prettier && yarn eslint",
    "lint:fix": "yarn package:fix && yarn prettier:fix && yarn eslint:fix",
    "package:fix": "format-package -w",
    "prepare": "husky install",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "report:html": "npx playwright show-report",
    "start": "next start",
    "test": "next test",
    "test:build": "GARDENS_DIRECTORY=src/test/content next build",
    "test:e2e": "playwright test",
    "test:e2e:cucumber:dev": "start-server-and-test dev:test http://localhost:3000 cucumber-js"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "gray-matter": "^4.0.3",
    "next": "^12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-stringify": "^9.0.2",
    "remark-wiki-link": "^1.0.4",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^8.0.0-rc.1",
    "@playwright/test": "^1.17.1",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "allure-playwright": "^2.0.0-beta.14",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "format-package": "^6.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "playwright": "^1.17.1",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "remark": "^14.0.2",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "unified": "^10.1.1"
  }
}

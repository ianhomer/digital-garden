{
  "name": "@garden/site",
  "version": "1.0.0",
  "description": "Digital Garden site",
  "license": "ISC",
  "bin": {
    "garden": "bin/garden.cjs"
  },
  "scripts": {
    "build": "next build",
    "export": "next export",
    "build:prepare": "node --experimental-specifier-resolution=node --loader ts-node/esm src/scripts/pre-build.ts",
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS=--inspect-brk next dev",
    "dev:hot": "next-remote-watch",
    "dev:test": "GARDENS_DIRECTORY=../test-gardens/content next dev",
    "eslint": "eslint src --ext .js --ext .tsx --ext .ts",
    "eslint:fix": "eslint src --ext .js --ext .tsx --ext .ts --fix",
    "start": "next start",
    "test": "echo 'tests missing'",
    "test:build": "GARDENS_DIRECTORY=../test-gardens/content next build",
    "test:e2e": "pnpm --filter @digital-garden/end-to-end test:e2e",
    "test:e2e:cucumber": "pnpm --filter @digital-garden/end-to-end test:e2e:cucumber",
    "test:e2e:cucumber:dev": "server-test dev:test 3000 test:e2e:cucumber",
    "test:watch": "jest --watch"
  },
  "type": "module",
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@garden/garden": "workspace:1.0.0",
    "@garden/graph": "workspace:1.0.0",
    "@garden/types": "workspace:1.0.0",
    "d3": "^7.6.1",
    "dotenv": "^16.0.3",
    "gray-matter": "^4.0.3",
    "hastscript": "^7.1.0",
    "highlight.js": "^11.6.0",
    "lodash": "^4.17.21",
    "next": "^12.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-highlight": "^6.0.0",
    "rehype-stringify": "^9.0.3",
    "remark-directive": "^2.0.1",
    "remark-emoji": "^3.0.2",
    "remark-gfm": "^3.0.1",
    "remark-wiki-link": "^1.0.4",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/d3": "^7.4.0",
    "@types/d3-force": "^3.0.3",
    "@types/d3-quadtree": "^3.0.2",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.11.0",
    "@types/react": "^18.0.21",
    "@types/unist": "^2.0.6",
    "autoprefixer": "^10.4.12",
    "jest": "^29.2.0",
    "next-remote-watch": "^2.0.0",
    "next-transpile-modules": "^9.1.0",
    "pino-pretty": "^9.1.1",
    "postcss": "^8.4.18",
    "remark": "^14.0.2",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "yargs": "^17.6.0"
  }
}

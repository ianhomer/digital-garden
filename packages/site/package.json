{
  "name": "@garden/site",
  "version": "1.0.0",
  "description": "Digital Garden site",
  "license": "ISC",
  "bin": {
    "garden": "bin/garden.cjs"
  },
  "scripts": {
    "build": "next build",
    "build:prepare": "node --experimental-specifier-resolution=node --loader ts-node/esm src/scripts/pre-build.ts",
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS=--inspect-brk next dev",
    "dev:hot": "next-remote-watch",
    "dev:test": "GARDENS_DIRECTORY=../test-gardens/content next dev",
    "eslint": "eslint src --ext .js --ext .tsx --ext .ts",
    "eslint:fix": "eslint src --ext .js --ext .tsx --ext .ts --fix",
    "start": "next start",
    "test": "echo 'tests missing'",
    "test:build": "GARDENS_DIRECTORY=../test-gardens/content next build",
    "test:e2e": "pnpm --filter @digital-garden/end-to-end test:e2e",
    "test:e2e:cucumber": "pnpm --filter @digital-garden/end-to-end test:e2e:cucumber",
    "test:e2e:cucumber:dev": "server-test dev:test 3000 test:e2e:cucumber",
    "test:watch": "jest --watch"
  },
  "type": "module",
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@garden/garden": "workspace:*",
    "@garden/graph": "workspace:*",
    "@garden/types": "workspace:*",
    "d3": "^7.4.4",
    "dotenv": "^10.0.0",
    "gray-matter": "^4.0.3",
    "hastscript": "^7.0.2",
    "highlight.js": "^11.5.1",
    "lodash": "^4.17.21",
    "next": "^12.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-highlight": "^5.0.2",
    "rehype-stringify": "^9.0.3",
    "remark-directive": "^2.0.1",
    "remark-emoji": "^3.0.2",
    "remark-gfm": "^3.0.1",
    "remark-wiki-link": "^1.0.4",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@types/d3": "^7.1.0",
    "@types/node": "^17.0.31",
    "@types/react": "^17.0.45",
    "autoprefixer": "^10.4.7",
    "jest": "^27.5.1",
    "next-remote-watch": "^1.0.0",
    "next-transpile-modules": "^9.0.0",
    "pino-pretty": "^7.6.1",
    "postcss": "^8.4.13",
    "remark": "^14.0.2",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "unified": "^10.1.2",
    "yargs": "^17.4.1"
  }
}

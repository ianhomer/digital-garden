{
  "name": "@garden/site",
  "version": "1.0.0",
  "description": "Digital Garden site",
  "license": "ISC",
  "bin": {
    "garden": "bin/garden.cjs"
  },
  "type": "module",
  "scripts": {
    "build": "next build",
    "build:static": "GARDEN_STATIC=true next build",
    "build:prepare-and-static": "pnpm build:prepare && pnpm build:static",
    "build:prepare-and-crypt": "pnpm build:prepare-and-static && pnpm crypt",
    "build:prepare": "node --experimental-specifier-resolution=node --loader ts-node/esm src/scripts/pre-build.ts",
    "clean": "rimraf out encrypted .next .gardem-meta.json",
    "crypt": "staticrypt out -r && pnpm rimraf encrypted/out/_next/data",
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS=--inspect-brk next dev",
    "dev:hot": "next-remote-watch",
    "dev:test": "GARDENS_DIRECTORY=../test-gardens/content next dev",
    "eslint": "eslint src --ext .js --ext .tsx --ext .ts",
    "eslint:fix": "eslint src --ext .js --ext .tsx --ext .ts --fix",
    "serve": "serve out",
    "serve:crypt": "serve encrypted/out",
    "start": "next start",
    "test:build": "GARDENS_DIRECTORY=../test-gardens/content next build",
    "test:build:static": "GARDENS_DIRECTORY=../test-gardens/content GARDEN_STATIC=true next build",
    "test:e2e": "pnpm --filter @digital-garden/end-to-end test:e2e",
    "test:e2e:cucumber": "pnpm --filter @digital-garden/end-to-end test:e2e:cucumber",
    "test:e2e:cucumber:dev": "server-test dev:test 3000 test:e2e:cucumber",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@garden/garden": "workspace:*",
    "@garden/react": "workspace:*",
    "@garden/graph": "workspace:*",
    "@garden/types": "workspace:*",
    "dotenv": "^16.4.5",
    "highlight.js": "^11.9.0",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve": "^14.2.3",
    "staticrypt": "^3.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/yargs": "^17.0.32",
    "autoprefixer": "^10.4.19",
    "jest": "^29.7.0",
    "next-remote-watch": "^2.0.0",
    "pino-pretty": "^11.2.1",
    "postcss": "^8.4.39",
    "rimraf": "5.0.8",
    "start-server-and-test": "^2.0.4",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "yargs": "^17.7.2"
  }
}
